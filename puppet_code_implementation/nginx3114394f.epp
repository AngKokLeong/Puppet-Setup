<%-  Optional[String] $listen_port = undef  -%>
<%-  Optional[String] $server_name = undef  -%>



# NGIX Configuration
server {
  <% unless $listen_port =~ Undef { -%>
    listen <%= $listen_port %>;
  <% } else { -%>
    listen 80
  <% } -%>


  <% unless $listen_port =~ Undef { -%>
    server_name <%= $server_name %>;
  <% } else { -%>
    server_name localhost;
  <% } -%>

}
